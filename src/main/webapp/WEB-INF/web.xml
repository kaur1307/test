<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
   version="4.0">
    <display-name>Prabhsimran.Kaur.Assignment2</display-name>
    
    <!-- Front Controller Servlet -->
    <servlet>
        <servlet-name>FrontControllerServlet</servlet-name>
        <servlet-class>viewlayer.FrontControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontControllerServlet</servlet-name>
        <url-pattern>/frontController</url-pattern>
    </servlet-mapping>
    
    <!-- Get All Authors Servlet -->
    <servlet>
        <servlet-name>GetAllAuthorsServlet</servlet-name>
        <servlet-class>viewlayer.GetAllAuthorsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllAuthorsServlet</servlet-name>
        <url-pattern>/getAllAuthors</url-pattern>
    </servlet-mapping>
    
    <!-- Get Author By ID Servlet -->
    <servlet>
        <servlet-name>GetAuthorByIdServlet</servlet-name>
        <servlet-class>viewlayer.GetAuthorByIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAuthorByIdServlet</servlet-name>
        <url-pattern>/getAuthorById</url-pattern>
    </servlet-mapping>
    
    <!-- Add Author Servlet -->
    <servlet>
        <servlet-name>AddAuthorServlet</servlet-name>
        <servlet-class>viewlayer.AddAuthorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddAuthorServlet</servlet-name>
        <url-pattern>/addAuthor</url-pattern>
    </servlet-mapping>
    
    <!-- Update Author Servlet -->
    <servlet>
        <servlet-name>UpdateAuthorServlet</servlet-name>
        <servlet-class>viewlayer.UpdateAuthorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateAuthorServlet</servlet-name>
        <url-pattern>/updateAuthor</url-pattern>
    </servlet-mapping>
    
    <!-- Delete Author Servlet -->
    <servlet>
        <servlet-name>DeleteAuthorServlet</servlet-name>
        <servlet-class>viewlayer.DeleteAuthorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteAuthorServlet</servlet-name>
        <url-pattern>/deleteAuthor</url-pattern>
    </servlet-mapping>
    
    <!-- Default welcome file -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
